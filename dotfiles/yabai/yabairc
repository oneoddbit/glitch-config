#!/usr/bin/env sh
# ~/.config/yabai/yabairc — Saturn Pursuit

# --- Geral / Layout ---
yabai -m config layout                      bsp
yabai -m config auto_balance                on
yabai -m config window_placement            second_child
yabai -m config focus_follows_mouse         autofocus
yabai -m config mouse_follows_focus         off
yabai -m config window_topmost              off
yabai -m config window_shadow               off

# --- Bordas / Opacidade (suave mas legível) ---
yabai -m config window_opacity              on
yabai -m config active_window_opacity       1.00
yabai -m config normal_window_opacity       0.95
yabai -m config split_ratio                 0.50

# --- Gaps e padding (respira, estilo neon) ---
yabai -m config top_padding                 8
yabai -m config bottom_padding              8
yabai -m config left_padding                8
yabai -m config right_padding               8
yabai -m config window_gap                  8

# --- Fullscreen nativo (sem janelas flutuarem à toa) ---
yabai -m config window_zoom_persist         on
yabai -m config external_bar                all:26:0   # se usares sketchybar no topo (26px). Remove se não usares.

# --- Foco / Ciclagem ---
yabai -m config focus_follows_mouse         autofocus
yabai -m config mouse_modifier              fn           # segura 'fn' + arraste para mover/resize (opcional)
yabai -m config mouse_action1               move
yabai -m config mouse_action2               resize

# --- Regras: apps que devem flutuar (dialogs, settings, pickers) ---
yabai -m rule --add app="^System Settings$"           manage=off
yabai -m rule --add app="^App Store$"                 manage=off
yabai -m rule --add app="^Finder$"                    manage=off
yabai -m rule --add app="^Archive Utility$"           manage=off
yabai -m rule --add app="^Color Picker$"              manage=off
yabai -m rule --add app="^1Password.*"                manage=off
yabai -m rule --add app="^Raycast$"                   manage=off
yabai -m rule --add app="^Karabiner-Elements$"        manage=off

# --- Regras: workspaces por app (ajusta a teu gosto) ---
# 1: Code / Studio | 2: Terminal | 3: Browsers/Música
yabai -m rule --add app="^Visual Studio Code$"        space=1
yabai -m rule --add app="^WezTerm$"                   space=2
yabai -m rule --add app="^iTerm2?$"                   space=2
yabai -m rule --add app="^Firefox$"                   space=3
yabai -m rule --add app="^Brave Browser$"             space=3
yabai -m rule --add app="^Google Chrome$"             space=3
yabai -m rule --add app="^Arc$"                       space=3
yabai -m rule --add app="^Spotify$"                   space=3

# --- Regras úteis extra ---
# ligar “sticky” a utilitários (fica sempre visível em qualquer space)
# yabai -m rule --add app="^Music$"                   sticky=on
# yabai -m rule --add app="^Notes$"                   sticky=on

# --- Sinais (hooks) — envia eventos p/ sketchybar atualizar (opcional) ---
# Requer script do teu sketchybar; comenta se não usares.
# yabai -m signal --add event=space_changed action="osascript -e 'tell application \"SketchyBar\" to trigger \"space_change\"'"

# --- Segurança / Permissões ---
# NOTA: no macOS atual, garante permissões em:
# System Settings → Privacy & Security → Accessibility + Screen Recording (yabai e skhd)
# E (opcional) scripting-addition se precisares de features avançadas (requer ajustes de SIP).
